{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "comma-dangle"         : "off",
    "indent"               : [2, 4],
    "jsx-quotes"           : [2, "prefer-single"],
    "key-spacing"          : "off",
    "max-len"              : [2, 120, 2],
    "object-curly-spacing" : [2, "always"],
    "one-var"              : [2, "consecutive"],
    "semi"                 : [2, "always", { "omitLastInOneLineBlock": true }],
    "space-before-function-paren" : [2, "never"],
    "react/jsx-curly-spacing" : [2, {"when": "always", "attributes": {"allowMultiline":false}, "spacing": {"objectLiterals": "never"}}],
    "react/jsx-indent"     : [2,4],
    "react/jsx-indent-props" : [2, 4]
  }
}
